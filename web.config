<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- iisnode: Node.js uygulamasını çalıştırır -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>

    <rewrite>
      <rules>
        <!-- Node.js API isteklerini server.js'e yönlendir -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^server.js\/debug[\/]?" />
        </rule>

        <!-- Statik dosyalar (public klasörü) -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile"/>
          </conditions>
        </rule>

        <!-- Diğer tüm istekler Node.js'e -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>

    <iisnode
      node_env="production"
      nodeProcessCommandLine="node.exe"
      interceptor="&quot;%programfiles%\iisnode\interceptor.js&quot;"
      logDirectory="logs"
      debuggingEnabled="false"
      maxLogFileSizeInKB="1024"
    />

    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules"/>
          <add segment="database"/>
          <add segment="routes"/>
          <add segment="middleware"/>
        </hiddenSegments>
      </requestFiltering>
    </security>

  </system.webServer>
</configuration>
